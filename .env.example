# Application Environment
NODE_ENV=production

# API Configuration
API_PORT=3000
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-in-production
JWT_EXPIRES_IN=7d

# Database Configuration
# For SQLite (development)
DATABASE_URL=file:./data/dev.db

# For PostgreSQL (production recommended)
# DATABASE_URL=postgresql://user:password@postgres:5432/finance_flow?schema=public

# Frontend Configuration
WEB_PORT=80
FRONTEND_URL=http://localhost
VITE_API_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGIN=http://localhost
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_ERRORS=true

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.csv,.xlsx,.xls

# Optional: Seed Configuration
# SEED_EMAIL=admin@example.com
# SEED_PASSWORD=secure-password
# SEED_NAME=Admin User

# Optional: Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
